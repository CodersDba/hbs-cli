{
  "name": "hbs-cli",
  "version": "1.4.1",
  "description": "A CLI tool for rendering Handlebars templates",
  "homepage": "http://github.com/keithamus/hbs-cli/issues",
  "bugs": "http://github.com/keithamus/hbs-cli/issues",
  "license": "MIT",
  "author": "Keith Cirkel (http://keithcirkel.co.uk)",
  "files": [
    "lib/*.js"
  ],
  "main": "lib/index.js",
  "bin": {
    "hbs": "lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/keithamus/hbs-cli.git"
  },
  "scripts": {
    "lint": "eslint src test --ignore-path .gitignore",
    "prepublish": "babel src -d lib",
    "pretest": "npm run lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run test:run:1 && npm run test:verify:1 && npm run test:run:2 && npm run test:verify:2 && npm run test:run:3 && npm run test:verify:3",
    "test:run:1": "node . -H handlebars-helper-br -H ./test/br.js -D ./test/data.json -o test test/test-1.hbs",
    "test:verify:1": "diff test/test-1.html test/verify-1.html",
    "test:run:2": "node . -s -H handlebars-helper-br  -H ./test/br.js -D ./test/data.json test/test-1.hbs > test/test-2.html",
    "test:verify:2": "diff test/test-2.html test/verify-1.html",
    "test:run:3": "cat ./test/data.json | node . -s  -H ./test/br.js  --stdin test/test-1.hbs > test/test-3.html",
    "test:verify:3": "diff test/test-3.html test/verify-1.html",
    "watch": "npm run prepublish -- -w",
    "prepare": "husky install"
  },
  "config": {},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm test"
    }
  },
  "babel": {
    "compact": false,
    "ignore": [
      "node_modules"
    ],
    "targets": {
      "node": "14.0"
    },
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": "3.22",
          "loose": true,
          "modules": "commonjs"
        }
      ]
    ],
    "retainLines": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:unicorn/recommended"
    ],
    "env": {
      "es6": true,
      "node": true,
      "builtin": true
    },
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module",
      "ecmaFeatures": {
        "globalReturn": true,
        "impliedStrict": true,
        "jsx": false
      }
    },
    "plugins": [
      "unicorn"
    ],
    "parser": "@babel/eslint-parser",
    "rules": {
      "no-console": 0,
      "no-process-exit": 0,
      "camelcase": "error",
      "unicorn/prefer-module": 0,
      "unicorn/prefer-top-level-await": 0,
      "unicorn/import-style": 1,
      "unicorn/prefer-node-protocol": 1,
      "unicorn/prefer-spread": 1,
      "unicorn/no-await-expression-member": 1
    }
  },
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "debug": "^2.2.0",
    "fs-promise": "^0.5.0",
    "glob-promise": "^1.0.4",
    "handlebars": "^4.0.5",
    "husky": "^8.0.1",
    "lodash.merge": "^4.6.2",
    "minimist": "^1.2.0",
    "mkdirp-then": "^1.2.0",
    "resolve": "^1.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.0",
    "@babel/eslint-parser": "^7.18.9",
    "@babel/preset-env": "^7.19.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.23.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-unicorn": "^43.0.2",
    "get-stdin": "^8.0.0",
    "semantic-release": "^19.0.5",
    "travis-after-all": "^1.4.4"
  }
}
